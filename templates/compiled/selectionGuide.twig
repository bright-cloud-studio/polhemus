      <button class="control points" data-toggle="._4" type="button">5+</button>
    </fieldset>
    <fieldset class="control-group" data-filter-group>
      <label class="control-group-label">Is Wireless Required?</label>
      <button class="control wireless" data-toggle=".wireless-one" type="button"></button>
      <button class="control wireless" data-toggle=".wireless-two" type="button"></button>
      <button class="control wireless" data-toggle=".wireless-three" type="button"></button>
    </fieldset>
    <fieldset class="control-group" data-filter-group>
      <label class="control-group-label">Data Speed</label>
      <button class="control speed" data-toggle=".patriot" type="button"></button>
      <button class="control speed" data-toggle=".patriot-wireless" type="button"></button>
      <button class="control speed" data-toggle=".viper" type="button"></button>
    </fieldset>
    <fieldset class="control-group" data-filter-group>
      <label class="control-group-label">Accuracy</label>
      <button class="control accuracy" data-toggle="._1" type="button"></button>
      <button class="control accuracy" data-toggle="._2" type="button"></button>
      <button class="control accuracy" data-toggle="._3" type="button"></button>
    </fieldset>
    <fieldset class="control-group" data-filter-group>
      <label class="control-group-label">Latency</label>
      <button class="control latency" data-toggle="._4" type="button"></button>
      <button class="control latency" data-toggle="._5" type="button"></button>
      <button class="control latency" data-toggle="._6" type="button"></button>
    </fieldset>
    <fieldset class="control-group" data-filter-group>
      <label class="control-group-label">Portability</label>
      <button class="control portability" data-toggle="._7" type="button"></button>
      <button class="control portability" data-toggle=".liberty-latus" type="button"></button>
      <button class="control portability" data-toggle=".g4" type="button"></button>
    </fieldset>
